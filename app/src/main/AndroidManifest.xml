<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="alt28.assignment.university.aberystwyth.languagelearner">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.phrases.AddPhraseActivity" />
        <activity android:name=".ui.main.LanguagePickerActivity" />
        <activity android:name=".ui.games.MultipleChoiceActivity" />
        <activity android:name=".ui.games.TranslatePhraseActivity" />
        <activity android:name=".ui.games.GameResultsActivity" />
        <activity android:name=".ui.main.AboutActivity" />
    </application>

</manifest>